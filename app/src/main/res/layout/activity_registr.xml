<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Registr">

    <Button
            android:text="Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="138dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.501" android:elevation="0dp"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="61dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintVertical_bias="0.38"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            android:hint="   Password" android:textSize="24sp" android:textAlignment="viewStart"/>
    <EditText
            android:layout_width="256dp"
            android:layout_height="82dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="36dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.247"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="serif" android:textAlignment="center"
            tools:layout_constraintRight_creator="1" android:layout_marginStart="36dp" android:layout_marginEnd="36dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.504" android:hint="Username"/>

</android.support.constraint.ConstraintLayout>
