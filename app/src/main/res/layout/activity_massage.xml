<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.guap.guap_tinder.Massage">

    <Button
            android:text="Input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/input_massage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="138dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            tools:layout_constraintRight_creator="1" tools:layout_constraintLeft_creator="1"
            android:elevation="0dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/send_massage" android:onClick="show_massage"/>
    <EditText
            android:layout_width="256dp"
            android:layout_height="82dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/send_massage" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginRight="36dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.247"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:fontFamily="serif" android:textAlignment="center"
            tools:layout_constraintRight_creator="1" android:layout_marginStart="36dp" android:layout_marginEnd="36dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.504" android:hint="Send massage"/>
</android.support.constraint.ConstraintLayout>
